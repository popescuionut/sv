<h1>Listing Cars</h1>

<p>Hello!<p>

<div class="container">
<table class=class="table table-striped">
  <thead>
    <tr>
      <th>Color</th>
      <th>Hp</th>
      <th>Model</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.color %></td>
        <td><%= car.hp %></td>
        <td><%= car.model %></td>
        <button type="button" class="btn btn-success"><%= link_to 'Show', car %></button>
        <button type="button" class="btn btn-success"><%= link_to 'Edit', edit_car_path(car) %></button>
        <button type="button" class="btn btn-success"><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></button>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

